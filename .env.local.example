# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=url-to-your-supabase-instance.supabase.co
# Replace the above with your actual Supabase URL and Anon Key.
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# Replace the above with your actual Supabase Anon Key.

# Backend API Configuration
NEXT_PUBLIC_BACKEND_PORT=8080
# The port your Spring Boot backend is running on (used in utils/api.ts)

# Alternative Backend URL Configuration (uncomment if using full URL instead of port)
# NEXT_PUBLIC_API_URL=http://localhost:8080
# Use this if you prefer to set the full backend URL instead of just the port

# PayHere Payment Gateway Configuration
# Mode: 'sandbox' for testing, 'live' for production
NEXT_PUBLIC_PAYHERE_MODE=sandbox

# PayHere API Endpoints (automatically set based on mode)
# Sandbox: https://sandbox.payhere.lk/pay/checkout
# Live: https://www.payhere.lk/pay/checkout
NEXT_PUBLIC_PAYHERE_SANDBOX_URL=https://sandbox.payhere.lk/pay/checkout
NEXT_PUBLIC_PAYHERE_LIVE_URL=https://www.payhere.lk/pay/checkout

# PayHere Merchant Credentials (Frontend - for validation only)
NEXT_PUBLIC_PAYHERE_MERCHANT_ID=your-payhere-merchant-id
# Note: Merchant Secret should NEVER be in frontend - keep it in backend only

# PayHere Test Merchant Credentials (Sandbox)
# Get these from: https://sandbox.payhere.lk/merchant/
NEXT_PUBLIC_PAYHERE_SANDBOX_MERCHANT_ID=1211149
# Use PayHere's test merchant ID for sandbox testing

# Backend PayHere Configuration (for Spring Boot .env or application.properties)
# PAYHERE_MODE=sandbox
# PAYHERE_MERCHANT_ID=1211149
# PAYHERE_MERCHANT_SECRET=your-sandbox-merchant-secret
# PAYHERE_SANDBOX_URL=https://sandbox.payhere.lk/pay/checkout
# PAYHERE_LIVE_URL=https://www.payhere.lk/pay/checkout

# Payment Callback URLs (these should match your domain)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
# Change this to your production domain for production environment

# CSRF Protection (if your backend requires specific headers)
NEXT_PUBLIC_CSRF_HEADER_NAME=X-CSRF-TOKEN
# Optional: If your backend requires specific CSRF headers