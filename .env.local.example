# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=url-to-your-supabase-instance.supabase.co
# Replace the above with your actual Supabase URL and Anon Key.
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# Replace the above with your actual Supabase Anon Key.

# Backend API Configuration
NEXT_PUBLIC_BACKEND_PORT=8080
# The port your Spring Boot backend is running on (used in utils/api.ts)


# NEXT_PUBLIC_API_URL=http://localhost:8080
# Use this if you prefer to set the full backend URL instead of just the port

# PayHere Payment Gateway Configuration
# Frontend only needs to specify the mode - backend handles all credentials
NEXT_PUBLIC_PAYHERE_MODE=sandbox

# Note: PayHere merchant credentials are securely stored in backend application.properties
# Backend Configuration (add these to your Spring Boot application.properties):
# payhere.merchantId=1232399
# payhere.merchantSecret=your-merchant-secret
# payhere.sandboxUrl=https://sandbox.payhere.lk/pay/checkout  
# payhere.liveUrl=https://www.payhere.lk/pay/checkout
# payhere.mode=sandbox

# Payment Callback URLs (these should match your domain)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
# Change this to your production domain for production environment

# CSRF Protection (if your backend requires specific headers)
NEXT_PUBLIC_CSRF_HEADER_NAME=X-CSRF-TOKEN
# Optional: If your backend requires specific CSRF headers

# Backend URL Configuration (uncomment if using full URL instead of port)
NEXT_PUBLIC_BACKEND_URL=http://localhost:8080
NEXT_PUBLIC_WEBSOCKET_URL=http://localhost:8080/ws

# Resend API Configuration
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here